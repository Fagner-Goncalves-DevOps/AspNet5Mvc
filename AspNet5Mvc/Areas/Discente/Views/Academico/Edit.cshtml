@model Core.Entities.Academico

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Academico</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AcademicoID" />
                <div class="form-group">
                    <label asp-for="RegistroAcademico" class="control-label"></label>
                    <input asp-for="RegistroAcademico" class="form-control" />
                    <span asp-validation-for="RegistroAcademico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Foto</label>
                    <input type="file" name="foto" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <hr />
        <div class="col-4">
            <img class="img-thumbnail" src="@Url.Action("GetFoto", "Academico", new { id = Model.AcademicoID })" style="display:block; margin-left:auto;margin-right:auto;" />
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="chkRemoverFoto" value="Sim">Remover Foto
                </label>
            </div>
        </div>
    </div>
    <hr />
    <div>
        <a class="btn btn-primary" asp-action="Index">Voltar Para Lista</a>
    </div>




    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
